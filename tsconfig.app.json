{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": ["ES2021", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,
		"types": ["node"],
		"baseUrl": ".",
		"paths": {
			"@assets/*": ["src/assets/*"],
			"@api/*": ["src/api/*"],
			"@components/*": ["src/components/*"],
			"@sections/*": ["src/sections/*"],
			"@models/*": ["src/models/*"],
			"@util/*": ["src/util/*"]
		},

		"moduleResolution": "Bundler",
		"allowImportingTsExtensions": true,
		"isolatedModules": true,
		"moduleDetection": "force",
		"noEmit": true,
		"jsx": "react-jsx",

		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": ["src", "public/mockServiceWorker.js", "public/cache-worker.js"]
}
